# Server
PORT=3001
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/teyvat-card-game

# JWT
JWT_ACCESS_SECRET=your-access-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# PayOS (tạo link thanh toán QR)
# PAYOS_CLIENT_ID=a156d42f-2b36-464b-85a4-d69a7d636c88
# PAYOS_API_KEY=38c1d410-623d-4403-9b21-efbb197c3434
# PAYOS_CHECKSUM_KEY=43533f8d67ba72c7dc2f8d1cc5015c299aac98f366d1e8cdd6160eb2d33d0eb4

# Frontend URL (cho returnUrl/cancelUrl)
FRONTEND_URL=http://localhost:3000

# Game URL (cho payment return từ PayOS)
GAME_URL=http://localhost:3000

# Admin UI: serve build từ cùng cổng (production). Dev thì chạy admin-web riêng.
# SERVE_ADMIN_UI=true  → server serve admin-web/dist trên cùng PORT (không CORS).
# SERVE_ADMIN_UI=false hoặc không set → không serve, dev chạy admin trên port khác (cần CORS).
SERVE_ADMIN_UI=false

# Admin URL (chỉ khi SERVE_ADMIN_UI=false, cho CORS khi dev admin trên port khác)
ADMIN_URL=http://localhost:8000

# Đường dẫn thư mục ảnh cards (nguồn cho cây file / tạo atlas). Để trống = admin-web/public/assets/images/cards
# CARDS_IMAGES_PATH=

# Đường dẫn ghi all-cards.webp + all-cards.json (TeyvatCard). Để trống = TeyvatCard/public/assets/images/cards
# TEYVAT_CARDS_PUBLIC_PATH=

# Google OAuth (đăng nhập Google)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
