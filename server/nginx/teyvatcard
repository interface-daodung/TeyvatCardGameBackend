server {
    listen 443 ssl;
    server_name teyvatcard.site www.teyvatcard.site;
    ssl_certificate /etc/letsencrypt/live/teyvatcard.site/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/teyvatcard.site/privkey.pem; # managed by Certbot


    location / {
        proxy_hide_header Cross-Origin-Opener-Policy;
        add_header Cross-Origin-Opener-Policy "same-origin-allow-popups" always;
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }


}
server {
    if ($host = admin.teyvatcard.site) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name admin.teyvatcard.site;
    return 301 https://$host$request_uri;


}

server {
    listen 443 ssl;
    server_name admin.teyvatcard.site;
    ssl_certificate /etc/letsencrypt/live/teyvatcard.site/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/teyvatcard.site/privkey.pem; # managed by Certbot


    location / {
        proxy_hide_header Cross-Origin-Opener-Policy;
        add_header Cross-Origin-Opener-Policy "same-origin-allow-popups" always;
        proxy_pass http://127.0.0.1:3001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

}
